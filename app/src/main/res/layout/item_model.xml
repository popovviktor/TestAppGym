<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constr1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_constraintDimensionRatio="1:1.5"
    app:layout_constraintWidth_percent="2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewForColorBackLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:background="#671A1A"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrForColorBackLeftLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#681515">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#CF4F4F"
                app:cardCornerRadius="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constr2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="TextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/item_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/item_start_time" />

                    <TextView
                        android:id="@+id/itemNameLesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="TextView"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintStart_toEndOf="@+id/item_end_time"
                        app:layout_constraintTop_toTopOf="@+id/item_start_time" />

                    <TextView
                        android:id="@+id/itemLessonNameTrainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="@+id/itemNameLesson"
                        app:layout_constraintTop_toTopOf="@+id/item_end_time" />

                    <TextView
                        android:id="@+id/itemPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="155dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="@+id/itemLessonNameTrainer"
                        app:layout_constraintStart_toStartOf="@+id/itemLessonNameTrainer"
                        app:layout_constraintTop_toTopOf="@+id/itemLessonNameTrainer"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="12dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/itemLessonNameTrainer"
                        app:layout_constraintEnd_toStartOf="@+id/itemLessonNameTrainer"
                        app:layout_constraintTop_toTopOf="@+id/itemLessonNameTrainer"
                        app:srcCompat="@drawable/fortrainer" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="14dp"
                        android:layout_height="17dp"
                        android:layout_marginEnd="4dp"
                        android:scaleX="0.8"
                        android:scaleY=".8"
                        app:layout_constraintBottom_toBottomOf="@+id/itemPlace"
                        app:layout_constraintEnd_toStartOf="@+id/itemPlace"
                        app:layout_constraintTop_toTopOf="@+id/itemPlace"
                        app:srcCompat="@drawable/places" />

                    <TextView
                        android:id="@+id/itemLenghtLesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintBottom_toTopOf="@+id/itemPlace"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.87"
                        app:layout_constraintStart_toStartOf="@+id/itemPlace"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.444" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>